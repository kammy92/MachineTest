<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.actiknow.machinetest.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_value_of_n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_toLeftOf="@+id/btGetSeries"
            android:layout_toStartOf="@+id/btGetSeries">

            <EditText
                android:id="@+id/etValueOfN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Value of N"
                android:inputType="number"
                android:padding="@dimen/edittext_padding"
                android:textSize="@dimen/text_size_medium"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btGetSeries"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/input_layout_value_of_n"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/input_layout_value_of_n"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_toLeftOf="@+id/btFromAPI"
            android:text="GET SERIES"
            android:textSize="@dimen/text_size_small"/>

        <Button
            android:id="@+id/btFromAPI"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/input_layout_value_of_n"
            android:layout_marginRight="@dimen/activity_margin"
            android:text="FROM API"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btFromAPI"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="Fibonacci series"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/tvSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="@dimen/activity_margin"
            android:text="0"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSeries"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="Sum of Even number in the series"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/tvEvenSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginLeft="@dimen/activity_margin"
            android:text="0"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEvenSum"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="Sum of Odd number in the series"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/tvOddSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginLeft="@dimen/activity_margin"
            android:text="0"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
